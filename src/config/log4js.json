{
  "appenders": {
    "console": {
      "type":"console"
    },
    "logFile": {
      "type": "file",
      "filename": "./logs/logFile/file.log",
      "maxLogSize": 104800,
      "backups": 100
    },
    "logDate": {
      "type": "dateFile",
      "filename": "./logs/logDate/date",
      "alwaysIncludePattern": true,
      "pattern": "-yyyy-MM-dd.log"
    }
  },
  "categories": {
    "default": { "appenders": ["console"], "level": "info" },
    "error": { "appenders": ["logFile", "logDate"], "level": "error" }
  }
}